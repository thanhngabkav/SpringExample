<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="Entities">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>Category</class>
        <class>Product</class>
        <properties>
            <property name="eclipselink.jdbc.bath-writing" value="JDBC"/>
            <property name="eclipselink.target-database" value="SQLServer"/>
            <property name="eclipselink.jdbc.url"
                      value="jdbc:sqlserver://localhost:1433;databaseName=SpringExample_DB"/>
            <property name="eclipselink.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
        </properties>
    </persistence-unit>
</persistence>
